{
  "id": "b88ea9a0-7d6e-11e5-b5de-d57d652482f7",
  "name": "Cake",
  "friendlyName": "Cake",
  "description": "Build with Cake",
  "author": "Patrik Svensson",
  "helpMarkDown": "[More Information about Cake](http://cakebuild.net)",
  "category": "Build",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": "0",
    "Minor": "1",
    "Patch": "7"
  },
  "minimumAgentVersion": "1.83.0",
  "instanceNameFormat": "Cake $(message)",
  "groups": [
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": false
    },
    {
      "name": "test",
      "displayName": "Test Results",
      "isExpanded": false
    }
  ],
  "inputs": [
    {
      "name": "script",
      "type": "filePath",
      "label": "Cake Script",
      "defaultValue":"build.cake",
      "helpMarkDown": "The build script to execute.",
      "required":true
    },
    {
      "name": "target",
      "type": "string",
      "label": "Target",
      "defaultValue":"Default",
      "helpMarkDown": "The build script target to run.",
      "required":true
    },
    {
      "name": "verbosity",
      "type": "pickList",
      "label": "Verbosity",
      "defaultValue":"Verbose",
      "helpMarkDown": "Specifies the amount of information to be displayed.",
      "required":true,
      "options": {
        "Quiet": "Quiet",
        "Minimal": "Minimal",
        "Normal": "Normal",
        "Verbose": "Verbose",
        "Diagnostic": "Diagnostic"
      }
    },
    {
      "name": "arguments",
      "type": "string",
      "label": "Cake Arguments",
      "defaultValue":"",
      "helpMarkDown": "Additional arguments passed to Cake.",
      "required":false
    },
    {
      "name": "nugetExeLocation",
      "type": "string",
      "label": "Nuget Exe Location",
      "defaultValue": "https://nuget.org/nuget.exe",
      "required": false,
      "helpMarkDown": "Where to fetch the nuget executable from.",
      "groupName": "advanced"
    },
    {
      "name": "nugetFeedUrl",
      "type": "string",
      "label": "Nuget Feed Url",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Use an alternate nuget package feed",
      "groupName": "advanced"
    },
    {
      "name": "testRunner",
      "type": "pickList",
      "label": "Test Result Format",
      "defaultValue": "JUnit",
      "required": true,
      "helpMarkDown": "Format of test result files generated by your choice of test runner e.g. JUnit, VSTest, XUnit V2 and NUnit.",
      "options": {
          "JUnit": "JUnit",
          "NUnit": "NUnit",
          "VSTest": "VSTest",
          "XUnit": "XUnit"
      }
    },
    {
      "name": "testResultsFiles",
      "type": "filePath",
      "label": "Test Results Files",
      "defaultValue": "**/TEST-*.xml",
      "required": true,
      "helpMarkDown": "Test results files path.  Wildcards can be used.  For example, `**/TEST-*.xml` for all xml files whose name starts with TEST-."
    }
  ],
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\Cake.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
